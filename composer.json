{
    "name": "aviationwx/aviationwx.org",
    "description": "Real-time aviation weather and conditions for participating airports",
    "type": "project",
    "require": {
        "erusev/parsedown": "^1.7"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.5"
    },
    "autoload": {
        "files": [
            "lib/config.php",
            "lib/rate-limit.php",
            "lib/logger.php",
            "api/weather.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "AviationWX\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "test-unit": "phpunit --testsuite Unit",
        "test-integration": "phpunit --testsuite Integration",
        "test-performance": "phpunit --testsuite Performance",
        "test-e2e": "phpunit --testsuite E2E",
        "test-smoke": "phpunit --testsuite Smoke"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}

