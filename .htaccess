# AviationWX URL Rewriting (when Apache serves directly)
# Disable directory listing (prevents 403 errors on directories)
Options -Indexes

<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # Note: HTTPS redirection is handled by Nginx in production

    # Handle subdomain requests (Host header preserved by reverse proxy)
    # Match subdomain pattern like kspb.aviationwx.org
    RewriteCond %{HTTP_HOST} ^([^\.]+)\.aviationwx\.org$ [NC]
    # Exclude www, bare domain, status, guides, embed, api, and terms subdomains
    # These are handled by PHP routing in index.php, not as airport identifiers
    RewriteCond %1 !^(www|aviationwx|status|guides|embed|api|terms)$ [NC]
    # Exclude existing PHP files (weather.php, webcam.php, etc.)
    RewriteCond %{REQUEST_FILENAME} !-f
    # Rewrite to index.php with airport parameter
    RewriteRule ^(.*)$ index.php?airport=%1 [QSA,L]

    # Route sitemap.xml to api/sitemap.php
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^sitemap\.xml$ api/sitemap.php [L]

    # Route robots.txt to public/robots.txt
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^robots\.txt$ public/robots.txt [L]

    # Route API endpoints to api/ directory
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^weather\.php$ api/weather.php [L]
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^webcam\.php$ api/webcam.php [L]

    # Route Public API v1 endpoints to api/v1/router.php
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^api/v1/(.*)$ api/v1/router.php [QSA,L]

    # Route admin endpoints to admin/ directory
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^diagnostics\.php$ admin/diagnostics.php [L]
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^clear-cache\.php$ admin/cache-clear.php [L]
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^metrics\.php$ admin/metrics.php [L]

    # Route health check endpoints to health/ directory
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^health\.php$ health/health.php [L]
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^ready\.php$ health/ready.php [L]

    # Return 404 for old service worker path (sw.js) - no longer used
    RewriteRule ^sw\.js$ - [R=404,L]
    
    # Route guides paths to index.php (for local dev/testing)
    # Must come before directory checks to prevent Apache from trying to access the guides/ directory
    # Match /guides, /guides/, and /guides/anything - force rewrite even if directory exists
    RewriteCond %{REQUEST_URI} ^/guides
    RewriteRule ^guides/?(.*)$ index.php [QSA,L]
    
    # Ensure service worker is served correctly (must come before catch-all)
    # Allow service worker file to be served as-is (don't route to index.php)
    RewriteCond %{REQUEST_URI} ^/public/js/service-worker\.js
    RewriteRule ^(.*)$ - [L]

    # Default to index.php for routing
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.*)$ index.php [QSA,L]
</IfModule>

# Security - Protect sensitive files and directories
# Deny access to configuration files (both root and config/ directory)
<FilesMatch "^(airports\.json|airports\.json\.test|composer\.json|composer\.lock|phpunit\.xml|\.env|\.gitignore|SECURITY\.md|nginx\.conf|Dockerfile|docker-compose\.yml|docker-compose\.prod\.yml|Makefile)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Deny access to test files and directories
<FilesMatch "^test">
    Order allow,deny
    Deny from all
</FilesMatch>

# Deny access to dev tools
# Note: health.php and ready.php are allowed for monitoring/health checks (routed to health/)
# Admin endpoints are now in admin/ directory and protected separately
<FilesMatch "^(dev/|test-local\.php|test-local\.sh)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Deny access to scripts, config, tests, and admin directories
<IfModule mod_rewrite.c>
    RewriteRule ^scripts/ - [F,L]
    RewriteRule ^config/ - [F,L]
    RewriteRule ^tests/ - [F,L]
    RewriteRule ^\.github/ - [F,L]
    RewriteRule ^vendor/ - [F,L]
    RewriteRule ^node_modules/ - [F,L]
    RewriteRule ^admin/ - [F,L]
    RewriteRule ^lib/ - [F,L]
    RewriteRule ^dev/ - [F,L]
    RewriteRule ^docs/ - [F,L]
    RewriteRule ^docker/ - [F,L]
    # Allow public/ directory for static assets
    # RewriteRule ^public/ - [L]  # Allow public assets
</IfModule>

# Deny access to hidden files (starting with .)
<FilesMatch "^\.">
    Order allow,deny
    Deny from all
</FilesMatch>

# Cache favicons for 1 month (30 days)
# Match favicon files in public/favicons/ directory
<FilesMatch "^public/favicons/.*\.(ico|png|webmanifest)$">
    <IfModule mod_expires.c>
        ExpiresActive On
        ExpiresDefault "access plus 1 month"
    </IfModule>
    <IfModule mod_headers.c>
        Header set Cache-Control "public, max-age=2592000, immutable"
    </IfModule>
</FilesMatch>
# Match root-level favicon files
<FilesMatch "^(favicon\.ico|favicon\.png|favicon-.*\.png|android-chrome-.*\.png|apple-touch-icon\.png|site\.webmanifest)$">
    <IfModule mod_expires.c>
        ExpiresActive On
        ExpiresDefault "access plus 1 month"
    </IfModule>
    <IfModule mod_headers.c>
        Header set Cache-Control "public, max-age=2592000, immutable"
    </IfModule>
</FilesMatch>

# Cache about-photo images for 1 month (30 days)
<FilesMatch "^public/images/about-photo\.(jpg|webp)$">
    <IfModule mod_expires.c>
        ExpiresActive On
        ExpiresDefault "access plus 1 month"
    </IfModule>
    <IfModule mod_headers.c>
        Header set Cache-Control "public, max-age=2592000, immutable"
    </IfModule>
</FilesMatch>
<FilesMatch "^about-photo\.(jpg|webp)$">
    <IfModule mod_expires.c>
        ExpiresActive On
        ExpiresDefault "access plus 1 month"
    </IfModule>
    <IfModule mod_headers.c>
        Header set Cache-Control "public, max-age=2592000, immutable"
    </IfModule>
</FilesMatch>

