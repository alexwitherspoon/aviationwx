# sshd now logs to dedicated file (configured via rsyslog)
# Old auth.log entry kept for backward compatibility, but sshd uses its own log
/var/log/aviationwx/sshd.log {
    daily
    rotate 1
    compress
    delaycompress
    missingok
    notifempty
    create 0644 root root
    sharedscripts
    postrotate
        # Reload rsyslog to pick up log rotation
        pkill -HUP rsyslogd 2>/dev/null || true
    endscript
}

# Keep auth.log rotation for any other services that might use it
/var/log/auth.log {
    daily
    rotate 1
    compress
    delaycompress
    missingok
    notifempty
    create 0644 root root
}

