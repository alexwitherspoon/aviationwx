# Mock VPN Client Container - For testing VPN server
FROM alpine:latest

# Install strongSwan and required tools
RUN apk add --no-cache \
    strongswan \
    iptables \
    iproute2 \
    curl \
    bash

# Create configuration directory
RUN mkdir -p /etc/ipsec.d

# Copy client configuration script
COPY docker/docker-entrypoint-vpn-client.sh /entrypoint.sh
RUN chmod +x /entrypoint.sh

# Start strongSwan via entrypoint
ENTRYPOINT ["/entrypoint.sh"]

